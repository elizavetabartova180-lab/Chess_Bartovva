                <Grid Background="#FF9A6400" Grid.Row="1" Grid.Column="2" MouseDown="SelectTile"/>
                <Grid Background="#FF9A6400" Grid.Row="1" Grid.Column="4" MouseDown="SelectTile"/>
                <Grid Background="#FF9A6400" Grid.Row="1" Grid.Column="6" MouseDown="SelectTile"/>

                <Grid Background="White" Grid.Row="2" Grid.Column="0" MouseDown="SelectTile"/>
                <Grid Background="White" Grid.Row="2" Grid.Column="2" MouseDown="SelectTile"/>
                <Grid Background="White" Grid.Row="2" Grid.Column="4" MouseDown="SelectTile"/>
